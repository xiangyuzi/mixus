<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">Let's Post Your Idea!</h2>
        <%= form_with model: @idea, local: true do |f|%>
          <div class="field">
            <%= f.label :image, "プロトタイプの画像" %><br />
            <%= f.file_field :image, id:"prototype_image" %>
          </div>

          <div class="field">
            <%= f.label :catchphrase, "キャッチフレーズ" %><br />
            <%= f.text_field :catchphrase, id:"idea_catchphrase" %>
          </div>

          <div class="field">
            <%= f.label :detail, "詳細" %><br />
            <%= f.text_area :detail, class: :form__text, id:"prototype_catch_copy" %>
          </div>

          <div class="weight-bold-text">
              この形でつくってほしい！
              <span class="indispensable">必須</span>
          </div>
          <%= f.collection_select(:category_id , Category.all, :id, :name, {}, {class:"select-box", id:"user-prefecture"}) %> 


          <div class="actions">
            <%= f.submit "保存する", class: :form__btn  %>
          </div>
        <% end %>
      </div>
  </div>
</div>